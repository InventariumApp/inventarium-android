<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inventariumapp.inventarium.Activities.ItemDetail"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_detail_product_name"
        android:layout_width="match_parent"
        android:text=""
        android:textSize="20dp"
        android:gravity="center"
        android:background="@color/purple"
        android:layout_margin="10dp"
        android:layout_height="70dp"
        android:transitionName="item_detail_transition"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_detail_product_image"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/purple">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy On Amazon!"
                android:textSize="30dp"
                android:textAlignment="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:text="Buy Now"
                    android:textSize="20dp"
                    android:textColor="@color/Black"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:background="@color/white"
                    android:clickable="true"
                    android:onClick="purchaseItem"/>
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/item_detail_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
    </WebView>
</LinearLayout>
