<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:background="@color/purple">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/ic_menu_black_24dp"
                android:tint="@color/Snow"
                android:onClick="onMenuClick"
                android:clickable="true"/>
            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tabStripEnabled="false"
                app:tabIndicatorColor="@color/Snow"
                app:tabTextColor="@color/Snow"
                app:tabSelectedTextColor="@color/Snow"
                app:tabGravity="fill"
                app:tabMode="fixed" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <!-- Bottom Bar -->
        <!--
        <View
            android:id="@+id/shadow"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@drawable/shadow">
        </View>
        -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Snow"
            android:elevation="40dp">
            <TextView
                android:id="@+id/manual_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/manual_input"
                android:textSize="15dp"
                android:textColor="@color/purple"
                android:onClick="onManualClick"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/barcode_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/manual_input"
                android:layout_marginStart="110dp"
                android:src="@drawable/barcode"
                android:tint="@color/purple"
                android:onClick="onBarcodeClick"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/camera_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/barcode_scan"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:tint="@color/purple"/>

        </RelativeLayout>
    </LinearLayout>
    <!-- The navigation drawer -->
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/purple">
            <ImageView
                android:layout_width="@dimen/logo_w_h"
                android:layout_height="@dimen/logo_w_h"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>
        <!-- Lists -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/lists_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_list_black_40dp"
                android:tint="@color/Purple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/lists_image"
                android:layout_marginLeft="15dp"
                android:text="Lists"
                android:textSize="15dp"
                android:textColor="@color/purple"
                />
        </RelativeLayout>
        <!-- Lists Share -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/list_share_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_share_black_40dp"
                android:tint="@color/Purple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/list_share_image"
                android:layout_marginLeft="15dp"
                android:text="List Share"
                android:textSize="15dp"
                android:textColor="@color/purple"
                />
        </RelativeLayout>
        <!-- Shopping List Price -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/reciept_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_receipt_black_24dp"
                android:tint="@color/Purple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/reciept_image"
                android:layout_marginLeft="15dp"
                android:text="Shopping List Prices"
                android:textSize="15dp"
                android:textColor="@color/purple"
                />
        </RelativeLayout>
        <!-- Recipes -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_shopping_basket_black_24dp"
                android:tint="@color/Purple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/recipe_image"
                android:layout_marginLeft="15dp"
                android:text="Pantry List Recipes"
                android:textSize="15dp"
                android:textColor="@color/purple"
                />
        </RelativeLayout>
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/darker_gray"/>
        <!-- Sign Out -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sign_out_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_person_outline_black_40dp"
                android:tint="@color/Purple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/sign_out_image"
                android:layout_marginLeft="15dp"
                android:text="Sign Out"
                android:textSize="15dp"
                android:textColor="@color/purple"
                />
        </RelativeLayout>
        <!-- Feedback -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/feed_back_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_feedback_black_24dp"
                android:tint="@color/Purple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/feed_back_image"
                android:layout_marginLeft="15dp"
                android:text="Feed back"
                android:textSize="15dp"
                android:textColor="@color/purple"
                />
        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>